{
  "name": "fullstack-app",
  "version": "1.0.0",
  "description": "A minimal full-stack app with React + Vite frontend and Express backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "server": "cd server && npm start",
    "client": "cd client && npm run dev",
    "production": "cd client && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "serve": "^14.2.5"
  }
}
